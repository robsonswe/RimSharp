<Window x:Class="RimSharp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RimSharp.Views"
        xmlns:vm="clr-namespace:RimSharp.ViewModels"
        xmlns:converters="clr-namespace:RimSharp.Views.Converters"
        mc:Ignorable="d"
        Title="RimSharp - RimWorld Mod Manager" Height="800" Width="1200">

    <Window.Resources>
        <!-- Converters -->
        <converters:TabVisibilityConverter x:Key="TabVisibilityConverter"/>
        <converters:TabActiveConverter x:Key="TabActiveConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Styles -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#4a90e2"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Watermark TextBox Style -->
        <Style x:Key="WatermarkTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <TextBox Text="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent}, 
                                     UpdateSourceTrigger=PropertyChanged}"
                                     x:Name="textSource" 
                                     Background="Transparent" 
                                     Panel.ZIndex="2" />
                            <TextBlock Text="Search by..."
                                     Foreground="Gray"
                                     Margin="5,2"
                                     Panel.ZIndex="1">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=Text, Source={x:Reference textSource}}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <DockPanel>
        <!-- Top Settings Bar -->
        <Grid DockPanel.Dock="Top" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Row 0: Settings and Version -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                <Button Content="Settings" Width="80" Margin="0,0,10,0"/>
                <TextBlock Text="Game version:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Text="{Binding PathSettings.GameVersion}" Width="150" IsReadOnly="True"/>
            </StackPanel>
            
            <!-- Row 1: Game Folder -->
            <Grid Grid.Row="1" Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Content="Game folder" Width="80" Margin="0,0,5,0"
                        Command="{Binding BrowsePathCommand}" CommandParameter="GamePath"/>
                <TextBox Grid.Column="1" Text="{Binding PathSettings.GamePath}" IsReadOnly="True"/>
                <Button Grid.Column="2" Content="..." Width="30" Margin="5,0,0,0"
                        Command="{Binding BrowsePathCommand}" CommandParameter="GamePath"/>
            </Grid>
            
            <!-- Row 2: Config Folder -->
            <Grid Grid.Row="2" Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Content="Config folder" Width="80" Margin="0,0,5,0"
                        Command="{Binding BrowsePathCommand}" CommandParameter="ConfigPath"/>
                <TextBox Grid.Column="1" Text="{Binding PathSettings.ConfigPath}" IsReadOnly="True"/>
                <Button Grid.Column="2" Content="..." Width="30" Margin="5,0,0,0"
                        Command="{Binding BrowsePathCommand}" CommandParameter="ConfigPath"/>
            </Grid>
            
            <!-- Row 3: Mods Folder -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,5,0">
                    <Button Content="Mods" Width="60" Margin="0,0,5,0"
                            Command="{Binding BrowsePathCommand}" CommandParameter="ModsPath"/>
                    <Button Content="Expansions" Width="80"
                            Command="{Binding BrowsePathCommand}" CommandParameter="ExpansionsPath"/>
                </StackPanel>
                <TextBox Grid.Column="1" Text="{Binding PathSettings.ModsPath}" IsReadOnly="True"/>
                <Button Grid.Column="2" Content="..." Width="30" Margin="5,0,0,0"
                        Command="{Binding BrowsePathCommand}" CommandParameter="ModsPath"/>
            </Grid>
        </Grid>
        
        <!-- Mode Tabs -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5,0,5,0">
            <TextBlock Text="Mode:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button Content="Mods" Width="80" Margin="0,0,5,0"
                    Command="{Binding SwitchTabCommand}" CommandParameter="Mods"
                    Style="{StaticResource TabButtonStyle}"
                    IsEnabled="{Binding SelectedTab, Converter={StaticResource TabActiveConverter}, ConverterParameter=Mods}"/>
            <Button Content="Downloader" Width="80"
                    Command="{Binding SwitchTabCommand}" CommandParameter="Downloader"
                    Style="{StaticResource TabButtonStyle}"
                    IsEnabled="{Binding SelectedTab, Converter={StaticResource TabActiveConverter}, ConverterParameter=Downloader}"/>
        </StackPanel>
        
        <!-- Main Content Area -->
        <Grid>
            <ProgressBar 
                IsIndeterminate="True" 
                Height="2" 
                VerticalAlignment="Top" 
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            
            <!-- Mods View -->
            <Grid Visibility="{Binding SelectedTab, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=Mods}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Mod Details Panel -->
                <Border Grid.Column="0" Margin="5" BorderBrush="LightGray" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Mod Preview -->
                        <Border Grid.Row="0" Background="#4a90e2" Padding="20">
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedMod.Name}" FontSize="24" FontWeight="Bold" 
                                           Foreground="White" TextAlignment="Center" Margin="0,0,0,20"/>
                                <Border Width="180" Height="180" Background="#1e3a8a" CornerRadius="10">
                                    <Image Source="/Resources/mod-icon.png" Stretch="Uniform" Width="144" Height="144"/>
                                </Border>
                            </StackPanel>
                        </Border>
                        
                        <!-- Mod Info -->
                        <Grid Grid.Row="1" Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Mod Info Table -->
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Name:" FontWeight="Bold" Margin="0,0,10,0"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SelectedMod.Name}"/>
                                </Grid>
                                
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Path:" FontWeight="Bold" Margin="0,0,10,0"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SelectedMod.Path}"/>
                                </Grid>
                                
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="PackageID:" FontWeight="Bold" Margin="0,0,10,0"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SelectedMod.PackageId}"/>
                                </Grid>
                                
                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Authors:" FontWeight="Bold" Margin="0,0,10,0"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SelectedMod.Authors}"/>
                                </Grid>
                            </Grid>
                            
                            <!-- Mod Description -->
                            <Border Grid.Row="1" Margin="0,10,0,0" BorderBrush="LightGray" BorderThickness="0,1,0,0" Padding="0,10,0,0">
                                <ScrollViewer>
                                    <TextBlock Text="{Binding SelectedMod.Description}" TextWrapping="Wrap"/>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- Mod Lists -->
                <Grid Grid.Column="1" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Inactive Mods -->
                    <Border Grid.Row="0" Margin="0,0,0,5" BorderBrush="LightGray" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- List Header -->
                            <Border Grid.Row="0" Background="#f5f5f5" Padding="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Inactive" FontWeight="Bold"/>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5,0">
                                        <TextBox Width="150" Margin="0,0,5,0" Style="{StaticResource WatermarkTextBox}"/>
                                        <Button Content="ðŸ”" Width="30"/>
                                    </StackPanel>
                                    
                                    <ComboBox Grid.Column="2" Width="100" SelectedIndex="0">
                                        <ComboBoxItem Content="Name"/>
                                    </ComboBox>
                                </Grid>
                            </Border>
                            
                            <!-- Mod Items -->
                            <ListBox Grid.Row="1" ItemsSource="{Binding InactiveMods}" SelectedItem="{Binding SelectedMod}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" Margin="5"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                    
                    <!-- Active Mods -->
                    <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- List Header -->
                            <Border Grid.Row="0" Background="#f5f5f5" Padding="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Active" FontWeight="Bold"/>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5,0">
                                        <TextBox Width="150" Margin="0,0,5,0" Style="{StaticResource WatermarkTextBox}"/>
                                        <Button Content="ðŸ”" Width="30"/>
                                    </StackPanel>
                                    
                                    <ComboBox Grid.Column="2" Width="100" SelectedIndex="0">
                                        <ComboBoxItem Content="Name"/>
                                    </ComboBox>
                                </Grid>
                            </Border>
                            
                            <!-- Mod Items -->
                            <ListBox Grid.Row="1" ItemsSource="{Binding ActiveMods}" SelectedItem="{Binding SelectedMod}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" Margin="5"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                </Grid>
                
                <!-- Right Sidebar Buttons -->
                <StackPanel Grid.Column="2" Width="130" Margin="5">
                    <Button Content="Clear" Margin="0,0,0,5"/>
                    <Button Content="Sort" Margin="0,0,0,5"/>
                    <Button Content="Strip mods" Margin="0,0,0,5"/>
                    <Button Content="Create pack" Margin="0,0,0,5"/>
                    <Button Content="Fix integrity" Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Mod lists" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Button Content="Import list" Margin="0,0,0,5"/>
                    <Button Content="Import save" Margin="0,0,0,5"/>
                    <Button Content="Export list" Margin="0,0,0,20"/>
                    
                    <Button Content="Save" Background="#4a90e2" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Button Content="Run!" Background="#5cb85c" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
            
            <!-- Downloader View -->
            <Border Visibility="{Binding SelectedTab, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=Downloader}">
                <TextBlock Text="WIP" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </DockPanel>
</Window>