<UserControl x:Class="RimSharp.Views.Modules.Downloader.DownloaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RimSharp.Views.Modules.Downloader"
             xmlns:vm="clr-namespace:RimSharp.ViewModels.Modules.Downloader"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:DownloaderViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Button" x:Key="DownloaderButtonStyle" BasedOn="{StaticResource RimworldButtonStyle}">
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Main 2-Column Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/> <!-- Left Panel (thinner) -->
            <ColumnDefinition Width="3*"/> <!-- Right Panel -->
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Mod List -->
        <Border Grid.Column="0" Margin="0,0,5,0" Style="{StaticResource RimworldPanelBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/> <!-- List -->
                    <RowDefinition Height="Auto"/> <!-- Buttons Row 1 -->
                    <RowDefinition Height="Auto"/> <!-- Buttons Row 2 -->
                </Grid.RowDefinitions>

                <!-- Mod List -->
                <ListBox Grid.Row="0" ItemsSource="{Binding DownloadList}"
                         HorizontalContentAlignment="Stretch" Style="{StaticResource RimworldListBox}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" Margin="5,2" ToolTip="{Binding Path}" 
                                       Foreground="{StaticResource RimworldBrownBrush}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Buttons Row 1 -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0" HorizontalAlignment="Stretch">
                    <Button Content="Setup SteamCMD" Command="{Binding SetupSteamCmdCommand}" 
                            Style="{StaticResource DownloaderButtonStyle}" HorizontalAlignment="Left"/>
                    <Button Content="Check for Updates" Command="{Binding CheckUpdatesCommand}" 
                            Style="{StaticResource DownloaderButtonStyle}" HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- Buttons Row 2 -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0" HorizontalAlignment="Stretch">
                    <Button Content="Download" Command="{Binding DownloadCommand}" 
                            Style="{StaticResource RimworldSaveButtonStyle}" HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Right Panel - Web Browser -->
        <Border Grid.Column="1" Style="{StaticResource RimworldPanelBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Navigation Bar -->
                    <RowDefinition Height="*"/> <!-- Web Browser -->
                </Grid.RowDefinitions>

                <!-- Navigation Bar -->
                <Border Grid.Row="0" Style="{StaticResource RimworldListHeaderBorder}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <Button Content="←" Command="{Binding GoBackCommand}" 
                                Style="{StaticResource DownloaderButtonStyle}" Width="40"/>
                        <Button Content="→" Command="{Binding GoForwardCommand}" 
                                Style="{StaticResource DownloaderButtonStyle}" Width="40"/>
                        <Button Content="Home" Command="{Binding GoHomeCommand}" 
                                Style="{StaticResource DownloaderButtonStyle}" Width="80"/>
                        <Button Content="Add Mod to List" Command="{Binding AddModCommand}" 
                                Style="{StaticResource RimworldSaveButtonStyle}" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>

                <!-- WebView2 Control -->
                <wv2:WebView2 Grid.Row="1" x:Name="SteamWorkshopBrowser" 
                              Source="https://steamcommunity.com/app/294100/workshop/"
                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>