<!-- Views/Modules/Mods/ModsView.xaml -->
<UserControl x:Class="RimSharp.Views.Modules.Mods.ModsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RimSharp.Views.Modules.Mods"
             xmlns:vm="clr-namespace:RimSharp.ViewModels.Modules.Mods"
             xmlns:converters="clr-namespace:RimSharp.Views.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ModsViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <!-- Converters needed within this view -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <!-- Watermark TextBox Style (Copied from reference, define globally in App.xaml if preferred) -->
         <Style x:Key="WatermarkTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <TextBox Text="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent},
                                     UpdateSourceTrigger=PropertyChanged}"
                                     x:Name="textSource"
                                     Background="{TemplateBinding Background}"
                                     Panel.ZIndex="2" />
                            <TextBlock Text="{TemplateBinding Tag}"
                                     Foreground="Gray" IsHitTestVisible="False"
                                     Margin="5,2" VerticalAlignment="Center"
                                     Panel.ZIndex="1">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=Text, Source={x:Reference textSource}}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for list header buttons -->
        <Style TargetType="Button" x:Key="ListHeaderButtonStyle">
             <Setter Property="Width" Value="30"/>
             <Setter Property="Padding" Value="0"/>
             <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>

    <Grid>
         <!-- Loading Indicator / Progress Bar -->
         <!-- Placed here so it's specific to the ModsView loading state -->
         <!-- Using ProgressBar for consistency with reference -->
         <ProgressBar
                IsIndeterminate="True"
                Height="3" VerticalAlignment="Top" Panel.ZIndex="10" Margin="0"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- Main 3-Column Layout for Mods View -->
        <Grid Margin="0,3,0,0"> <!-- Margin to account for ProgressBar -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/> <!-- Details Panel -->
                <ColumnDefinition Width="2*"/> <!-- Lists Panel -->
                <ColumnDefinition Width="Auto"/> <!-- Buttons Panel -->
            </Grid.ColumnDefinitions>

            <!-- ================================= -->
            <!-- Mod Details Panel (Col 0) -->
            <!-- ================================= -->
            <Border Grid.Column="0" Margin="0,0,5,0" BorderBrush="LightGray" BorderThickness="1">
                <!-- Using structure from reference -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Mod Preview (Top Part) -->
                    <Border Grid.Row="0" Background="#4a90e2" Padding="20">
                         <!-- DataContext here is ModsViewModel, need SelectedMod -->
                        <StackPanel DataContext="{Binding SelectedMod}">
                            <TextBlock Text="{Binding Name, FallbackValue='Select a Mod'}" FontSize="24" FontWeight="Bold"
                                       Foreground="White" TextAlignment="Center" Margin="0,0,0,20" TextWrapping="Wrap"/>
                            <!-- TODO: Add logic for mod preview image if available -->
                            <Border Width="180" Height="180" Background="#1e3a8a" CornerRadius="10" HorizontalAlignment="Center">
                                <!-- Placeholder Icon -->
                                <!-- <Image Source="/Resources/mod-icon.png" Stretch="Uniform" Width="144" Height="144"/> -->
                                <TextBlock Text="?" FontSize="100" Foreground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Mod Info (Bottom Part) -->
                    <Grid Grid.Row="1" Margin="10" DataContext="{Binding SelectedMod}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Mod Info Table -->
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/> <!-- Added for Path -->
                            </Grid.RowDefinitions>

                             <Grid Grid.Row="0" Margin="0,0,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Name:" FontWeight="SemiBold" Margin="0,0,10,0" VerticalAlignment="Top"/>
                                <TextBlock Grid.Column="1" Text="{Binding Name}" TextWrapping="Wrap"/>
                            </Grid>

                             <Grid Grid.Row="1" Margin="0,0,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Authors:" FontWeight="SemiBold" Margin="0,0,10,0" VerticalAlignment="Top"/>
                                <TextBlock Grid.Column="1" Text="{Binding Authors}" TextWrapping="Wrap"/>
                            </Grid>

                             <Grid Grid.Row="2" Margin="0,0,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="PackageID:" FontWeight="SemiBold" Margin="0,0,10,0" VerticalAlignment="Top"/>
                                <TextBlock Grid.Column="1" Text="{Binding PackageId}" TextWrapping="Wrap"/>
                            </Grid>

                             <Grid Grid.Row="3" Margin="0,0,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Is Core:" FontWeight="SemiBold" Margin="0,0,10,0" VerticalAlignment="Top"/>
                                <TextBlock Grid.Column="1" Text="{Binding IsCore}"/>
                            </Grid>

                            <Grid Grid.Row="4" Margin="0,0,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Path:" FontWeight="SemiBold" Margin="0,0,10,0" VerticalAlignment="Top"/>
                                <TextBlock Grid.Column="1" Text="{Binding Path}" TextWrapping="Wrap" ToolTip="{Binding Path}"/>
                            </Grid>

                        </Grid>

                        <!-- Mod Description -->
                        <Border Grid.Row="1" Margin="0,10,0,0" BorderBrush="LightGray" BorderThickness="0,1,0,0" Padding="0,10,0,0">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- =========================== -->
            <!-- Mod Lists Panel (Col 1) -->
            <!-- =========================== -->
            <Grid Grid.Column="1" Margin="0,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/> <!-- Inactive List -->
                    <RowDefinition Height="*"/> <!-- Active List -->
                </Grid.RowDefinitions>

                <!-- Inactive Mods -->
                <Border Grid.Row="0" Margin="0,0,0,5" BorderBrush="LightGray" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/> <!-- Header -->
                            <RowDefinition Height="*"/>    <!-- List -->
                        </Grid.RowDefinitions>

                        <!-- List Header -->
                        <Border Grid.Row="0" Background="#f5f5f5" Padding="5">
                             <!-- TODO: Bind search text, filter command, sort selection to ModsViewModel -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Inactive" FontWeight="Bold" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0" HorizontalAlignment="Right">
                                    <TextBox Width="150" Tag="Search Inactive..." Style="{StaticResource WatermarkTextBox}"/>
                                    <Button Content="ðŸ”" Style="{StaticResource ListHeaderButtonStyle}"/>
                                </StackPanel>

                                <ComboBox Grid.Column="2" Width="100" SelectedIndex="0" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Name"/>
                                    <ComboBoxItem Content="Author"/>
                                    <!-- Add other sort options -->
                                </ComboBox>
                            </Grid>
                        </Border>

                        <!-- Mod Items List -->
                        <ListBox Grid.Row="1" ItemsSource="{Binding InactiveMods}" SelectedItem="{Binding SelectedMod, Mode=TwoWay}"
                                 HorizontalContentAlignment="Stretch">
                             <!-- TODO: Add Drag/Drop functionality if desired -->
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                     <!-- Customize Item Display -->
                                    <TextBlock Text="{Binding Name}" Margin="5,2" ToolTip="{Binding Path}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- Active Mods -->
                <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1">
                     <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/> <!-- Header -->
                            <RowDefinition Height="*"/>    <!-- List -->
                        </Grid.RowDefinitions>

                        <!-- List Header -->
                        <Border Grid.Row="0" Background="#f5f5f5" Padding="5">
                            <!-- TODO: Bind search text, filter command, sort selection to ModsViewModel -->
                           <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Active" FontWeight="Bold" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0" HorizontalAlignment="Right">
                                    <TextBox Width="150" Tag="Search Active..." Style="{StaticResource WatermarkTextBox}"/>
                                    <Button Content="ðŸ”" Style="{StaticResource ListHeaderButtonStyle}"/>
                                </StackPanel>

                                <ComboBox Grid.Column="2" Width="100" SelectedIndex="0" VerticalAlignment="Center">
                                    <ComboBoxItem Content="Load Order"/>
                                    <ComboBoxItem Content="Name"/>
                                     <!-- Add other sort options -->
                                </ComboBox>
                            </Grid>
                        </Border>

                        <!-- Mod Items List -->
                        <ListBox Grid.Row="1" ItemsSource="{Binding ActiveMods}" SelectedItem="{Binding SelectedMod, Mode=TwoWay}"
                                  HorizontalContentAlignment="Stretch">
                             <!-- TODO: Add Drag/Drop functionality for reordering -->
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <!-- Customize Item Display -->
                                    <TextBlock Text="{Binding Name}" Margin="5,2" ToolTip="{Binding Path}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>


            <!-- ============================== -->
            <!-- Right Sidebar Buttons (Col 2)-->
            <!-- ============================== -->
            <StackPanel Grid.Column="2" Width="130" Margin="0,0,0,0">
                 <!-- TODO: Add Commands to ModsViewModel -->
                <Button Content="Clear" Command="{Binding ClearActiveListCommand}" Margin="0,0,0,5"/>
                <Button Content="Sort" Command="{Binding SortActiveListCommand}" Margin="0,0,0,5"/>
                <Button Content="Strip mods" Command="{Binding StripModsCommand}" Margin="0,0,0,5"/>
                <Button Content="Create pack" Command="{Binding CreatePackCommand}" Margin="0,0,0,5"/>
                <Button Content="Fix integrity" Command="{Binding FixIntegrityCommand}" Margin="0,0,0,20"/>

                <TextBlock Text="Mod lists" FontWeight="Bold" Margin="0,0,0,5"/>
                 <!-- TODO: Add Commands to ModsViewModel (or MainViewModel?) -->
                <Button Content="Import list" Command="{Binding ImportListCommand}" Margin="0,0,0,5"/>
                <Button Content="Import save" Command="{Binding ImportSaveCommand}" Margin="0,0,0,5"/>
                <Button Content="Export list" Command="{Binding ExportListCommand}" Margin="0,0,0,20"/>

                <!-- TODO: Add Commands to ModsViewModel -->
                <Button Content="Save" Command="{Binding SaveCommand}" Background="#4a90e2" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                <Button Content="Run!" Command="{Binding RunGameCommand}" Background="#5cb85c" Foreground="White" FontWeight="Bold"/>
            </StackPanel>

        </Grid>
    </Grid>
</UserControl>