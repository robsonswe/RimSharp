<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:RimSharp.Infrastructure.Dialog"
                    x:Class="RimSharp.Infrastructure.Dialog.DialogTemplates">

    <!-- Base Dialog Window Template -->
    <Style x:Key="RimworldDialogStyle" TargetType="local:BaseDialog" BasedOn="{StaticResource RimworldWindowStyle}">
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:BaseDialog">
                    <Border Background="Transparent">
                        <!-- Drop shadow effect for the window -->
                        <Border.Effect>
                            <DropShadowEffect Color="{StaticResource RimworldShadow}"
                                            Direction="270"
                                            ShadowDepth="5"
                                            BlurRadius="10"
                                            Opacity="0.5"/>
                        </Border.Effect>
                        
                        <!-- Main window container -->
                        <Grid>
                            <!-- Background and border -->
                            <Border Background="{StaticResource RimworldBeigeBrush}"
                                    BorderBrush="{StaticResource RimworldBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/> <!-- Header -->
                                        <RowDefinition Height="*"/> <!-- Content -->
                                        <RowDefinition Height="Auto"/> <!-- Buttons -->
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Header/Title Bar -->
                                    <Border Grid.Row="0" 
                                            Background="{StaticResource RimworldBrownBrush}" 
                                            Height="30"
                                            CornerRadius="4,4,0,0"
                                            MouseLeftButtonDown="HeaderBorder_MouseLeftButtonDown">
                                        <Grid>
                                            <TextBlock Text="{TemplateBinding Title}"
                                                    Foreground="{StaticResource RimworldWhiteBrush}"
                                                    FontWeight="Medium"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"/>
                                            
                                            <!-- Close button -->
                                            <Button x:Name="CloseButton"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Width="30"
                                                    Height="30"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Click="CloseButton_Click"
                                                    Cursor="Hand">
                                                <TextBlock Text="âœ•"
                                                        Foreground="{StaticResource RimworldWhiteBrush}"
                                                        FontWeight="Bold"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="{StaticResource RimworldErrorBrush}"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Main content area -->
                                    <ContentPresenter Grid.Row="1" 
                                                    Content="{TemplateBinding MainContent}"
                                                    Margin="10,10,10,0"/>
                                    
                                    <!-- Button area -->
                                    <ContentPresenter Grid.Row="2" 
                                                    Content="{TemplateBinding ButtonContent}"
                                                    Margin="10,0,10,10"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>