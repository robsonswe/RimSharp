<UserControl x:Class="RimSharp.Features.WorkshopDownloader.Components.Browser.BrowserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:vm="clr-namespace:RimSharp.Features.WorkshopDownloader.Components.Browser"
             d:DataContext="{d:DesignInstance Type=vm:BrowserViewModel}"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Bar -->
        <Border Grid.Row="0"
                Style="{StaticResource RimworldInfoHeaderBorder}"
                Padding="5,3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Navigation buttons -->
                    <ColumnDefinition Width="Auto"/> <!-- Refresh button -->
                    <ColumnDefinition Width="*"/>    <!-- Address Bar -->
                </Grid.ColumnDefinitions>

                <!-- Navigation Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Command="{Binding GoBackCommand}"
                            Style="{StaticResource BrowserNavButtonStyle}"
                            ToolTip="Back"
                            Content="â—„" 
                            FontFamily="Segoe UI Symbol" 
                            FontSize="12"
                            Margin="0,0,2,0"/>
                    <Button Command="{Binding GoForwardCommand}"
                            Style="{StaticResource BrowserNavButtonStyle}"
                            ToolTip="Forward"
                            Content="â–º" 
                            FontFamily="Segoe UI Symbol" 
                            FontSize="12"
                            Margin="0,0,2,0"/>
                    <Button Command="{Binding GoHomeCommand}"
                            Style="{StaticResource BrowserNavButtonStyle}"
                            ToolTip="Home"
                            Content="âŒ‚" 
                            FontFamily="Segoe UI Symbol" 
                            FontSize="12"/>
                </StackPanel>

                <!-- Refresh Button -->
                <Button Grid.Column="1"
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource BrowserNavButtonStyle}"
                        ToolTip="Refresh"
                        Content="â†»" 
                        FontFamily="Segoe UI Symbol" 
                        FontSize="12"
                        Margin="5,0,5,0"/>

                <!-- Address Bar -->
                <Border Grid.Column="2"
                        Background="{StaticResource RimworldBeigeBrush}"
                        BorderBrush="{StaticResource RimworldBrownBrush}"
                        BorderThickness="1"
                        CornerRadius="3" 
                        VerticalAlignment="Center"
                        Height="26">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Security/HTTPS Indicator -->
                        <TextBlock Grid.Column="0" 
                                   Text="ðŸ”’"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   FontSize="10"
                                   Visibility="{Binding IsSecure, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        
                        <!-- Address TextBox -->
                        <TextBox x:Name="AddressTextBox"
                                 Grid.Column="1"
                                 Text="{Binding AddressBarUrl, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                 VerticalContentAlignment="Center"
                                 Padding="5,0,5,0"
                                 BorderThickness="0" 
                                 Background="Transparent"
                                 Foreground="{StaticResource RimworldBrownBrush}"
                                 FontSize="12">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter"
                                            Command="{Binding NavigateToUrlCommand}"
                                            CommandParameter="{Binding Text, ElementName=AddressTextBox}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- WebView2 Control -->
        <Border Grid.Row="1"
                BorderBrush="{StaticResource RimworldBrownBrush}"
                BorderThickness="0,0,0,1">
            <wv2:WebView2 x:Name="WebBrowser"/>
        </Border>
    </Grid>
</UserControl>