<UserControl x:Class="RimSharp.Features.WorkshopDownloader.Components.Browser.BrowserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:vm="clr-namespace:RimSharp.Features.WorkshopDownloader.Components.Browser"
             d:DataContext="{d:DesignInstance Type=vm:BrowserViewModel}"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Bar -->
        <Border Grid.Row="0"
                Style="{StaticResource RimworldInfoHeaderBorder}"
                Margin="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding GoBackCommand}"
                        Content="Back"
                        Style="{StaticResource DownloaderButtonStyle}"/>
                <Button Command="{Binding GoForwardCommand}"
                        Content="Forward"
                        Style="{StaticResource DownloaderButtonStyle}"/>
                <Button Command="{Binding GoHomeCommand}"
                        Content="Home"
                        Style="{StaticResource DownloaderButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- WebView2 Control -->
        <Border Grid.Row="1"
                BorderBrush="{StaticResource RimworldBrownBrush}"
                BorderThickness="1">
            <wv2:WebView2 x:Name="WebBrowser"/>
        </Border>
    </Grid>
</UserControl>