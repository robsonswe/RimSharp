<UserControl x:Class="RimSharp.Features.ModManager.Components.ModList.ModListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RimSharp.Features.ModManager.Components.ModList"
             xmlns:models="clr-namespace:RimSharp.Shared.Models"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:RimSharp.Features.ModManager.Behaviors"
             mc:Ignorable="d"
             x:Name="RootModListView"
             d:DesignHeight="400"
        d:DesignWidth="300">
    <Border Style="{StaticResource RimworldPanelBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- List -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Style="{StaticResource RimworldListHeaderBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                            FontWeight="Bold"
                            Margin="4"
                            HorizontalAlignment="Left"
                            Foreground="{StaticResource RimworldWhiteBrush}">
                         <Run Text="{Binding HeaderText, ElementName=RootModListView}"/>
                         <Run Text=" ["/>
                         <Run Text="{Binding ItemCount, ElementName=RootModListView, Mode=OneWay}"/>
                         <Run Text="]"/>
                    </TextBlock>
                    <Grid Grid.Row="1"
                            Margin="4,0,4,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                Tag="{Binding SearchPlaceholder, ElementName=RootModListView}"
                                 Style="{StaticResource RimworldWatermarkTextBox}"
                                VerticalAlignment="Center"
                                 Text="{Binding SearchText, ElementName=RootModListView, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                        <Button Grid.Column="1"
                                Content="Filters"
                                Style="{StaticResource RimworldButtonStyle}"
                                Width="50"
                                Height="22"
                                FontSize="11"
                                Padding="0"
                                Margin="4,0,0,0"
                                VerticalAlignment="Center"
                                Command="{Binding FilterCommand, ElementName=RootModListView}"
                                ToolTip="{Binding FilterToolTip, ElementName=RootModListView}"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- ListBox with DragDrop Behavior Attached -->
            <ListBox Grid.Row="1"
                     x:Name="InternalListBox"
                     ItemsSource="{Binding ItemsSource, ElementName=RootModListView}"
                     SelectedItem="{Binding SelectedItem, ElementName=RootModListView, Mode=TwoWay}"
                     Style="{StaticResource RimworldListBox}"
                     MouseDoubleClick="InternalListBox_MouseDoubleClick"
                     AllowDrop="True"
                     Background="Transparent"
                     SelectionMode="Extended">
                <!-- AllowDrop must be true for behavior's drop events to fire -->

                <b:Interaction.Behaviors>
                    <behaviors:ListBoxDragDropBehavior
                        DropCommand="{Binding DropCommand, ElementName=RootModListView}"
                        DragItemType="{Binding DragItemType, ElementName=RootModListView}"
                        ListGroupName="{Binding GroupName, ElementName=RootModListView}"/>
                </b:Interaction.Behaviors>

                <ListBox.ItemTemplate>
    <DataTemplate DataType="{x:Type models:ModItem}">
        <!-- Use a container that fills width for better hit testing -->
        <Border Background="Transparent" Tag="{Binding DataContext, ElementName=RootModListView}">
            <Border.ContextMenu>
                <ContextMenu>
                    <ContextMenu.Style>
                        <Style TargetType="ContextMenu">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <!-- DataContext here is ModItem -->
                                <DataTrigger Binding="{Binding IsCore}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContextMenu.Style>

                    <ContextMenu.Resources>
                       <!-- Your MenuItem Style -->
                       <Style TargetType="MenuItem">
                           <Setter Property="Padding" Value="6,2,6,2"/>
                           <Setter Property="Template">
                               <Setter.Value>
                                   <ControlTemplate TargetType="MenuItem">
                                       <Grid>
                                           <Grid.ColumnDefinitions>
                                               <ColumnDefinition Width="Auto" MinWidth="24"/>
                                               <ColumnDefinition Width="*"/>
                                           </Grid.ColumnDefinitions>
                                           
                                           <ContentPresenter Grid.Column="0" 
                                                           Content="{TemplateBinding Icon}" 
                                                           Margin="0,0,6,0"
                                                           VerticalAlignment="Center"/>
                                           
                                           <ContentPresenter Grid.Column="1" 
                                                           Content="{TemplateBinding Header}" 
                                                           VerticalAlignment="Center"/>
                                       </Grid>
                                   </ControlTemplate>
                               </Setter.Value>
                           </Setter>
                       </Style>
                    </ContextMenu.Resources>

                    <!-- Open Mod Folder -->
                    <MenuItem Header="Open Mod Folder"
                            Command="{Binding PlacementTarget.Tag.OpenUrlCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                            CommandParameter="{Binding Path}">
                        <MenuItem.Icon>
                            <TextBlock Text="ðŸ“" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <!-- External URL -->
                    <MenuItem Header="Open URL"
                            Command="{Binding PlacementTarget.Tag.OpenUrlCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                            CommandParameter="{Binding Url}"
                            Visibility="{Binding HasUrl, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <MenuItem.Icon>
                            <TextBlock Text="ðŸ”—" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <!-- Steam URL -->
                    <MenuItem Header="Open Workshop Page"
                            Command="{Binding PlacementTarget.Tag.OpenUrlCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                            CommandParameter="{Binding SteamUrl}"
                            Visibility="{Binding HasSteamUrl, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <MenuItem.Icon>
                            <TextBlock Text="â˜ï¸" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <!-- External URL -->
                    <MenuItem Header="Open Other URL"
                            Command="{Binding PlacementTarget.Tag.OpenUrlCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                            CommandParameter="{Binding ExternalUrl}"
                            Visibility="{Binding HasExternalUrl, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <MenuItem.Icon>
                            <TextBlock Text="ðŸŒ" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </Border.ContextMenu>

            <TextBlock Text="{Binding Name}"
                       ToolTip="{Binding Path}"
                       Margin="2,1"
                       Foreground="{Binding IsOutdatedRW,
                                    Converter={StaticResource BooleanToColorConverter},
                                    ConverterParameter=RimworldErrorRed|RimworldBrown}">
                <!-- ContextMenu removed from here -->
            </TextBlock>
        </Border>
    </DataTemplate>
                </ListBox.ItemTemplate>

                <!-- Style to visually indicate selected items better -->
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem"
                            BasedOn="{StaticResource {x:Type ListBoxItem}}">
                        <Setter Property="Padding"
                                Value="0"/>
                        <!-- Remove default padding if using Border in template -->
                        <Style.Triggers>
                            <Trigger Property="IsSelected"
                                    Value="True">
                                <!-- Keep default selection visual or customize -->
                                <Setter Property="Background"
                                        Value="{StaticResource RimworldHighlightBrush}"/>
                                <Setter Property="Foreground"
                                        Value="{StaticResource RimworldBlackBrush}"/>
                            </Trigger>
                            <!-- Optional: Trigger for dragged item opacity -->
                            <Trigger Property="Tag"
                                    Value="Dragging">
                                <Setter Property="Opacity"
                                        Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>
    </Border>
</UserControl>